<h1>Features</h1>

<%= link_to 'New Feature', new_feature_path, class: 'btn btn-success' %>

<table class='table'>
  <thead>
    <tr>
      <th>row</th>
      <th>no</th>
      <th>type</th>
      <th>content</th>
      <th>contentSortNo</th>
      <th>up_date</th>
      <th>deleteFlg</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @features.each do |feature| %>
      <tr>
        <td><%= feature.id %></td>
        <td><%= feature.no %></td>
        <td><%= feature.featureType %></td>
        <td><%= feature.content %></td>
        <td><%= feature.contentSortNo %></td>
        <td><%= feature.up_date %></td>
        <td><%= feature.deleteFlg %></td>
        <td>
            <div class="btn-toolbar">
              <div class="btn-group">
                <%= link_to 'Show', feature, class: 'btn btn-default btn-sm' %>
                <%= link_to 'Edit', edit_feature_path(feature), class: 'btn btn-default btn-sm' %>
                <%= link_to 'Destroy', feature, class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
              </div>
            </div>
        </td> 
      </tr>
    <% end %>
  </tbody>
</table>

